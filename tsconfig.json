{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "rootDir": "src",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false
  },
  "include": [
    "eslint.config.js",
    "homebridge-ui",
    "src"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
